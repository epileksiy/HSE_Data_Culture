    "loss = dfp['predict'].values - dfp['real'].values\n",
    "l_regr_over = np.mean(loss[loss > 0])\n",
    "l_regr_under =-1*np.mean(loss[loss < 0])\n",
    "\n",
    "l_regr_over, l_regr_under"
   ]
